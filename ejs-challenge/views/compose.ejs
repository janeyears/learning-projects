<%- include("partials/header") -%>

<h1>Create new recipe</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label><br>
        <input type="text" name="titleText" class="form-control"><br>
        <label>Ingredients</label><br>
        <textarea name="ingredientsText" rows="5" class="form-control"></textarea><br>
        <label>Directions</label><br>
        <textarea name="directionsText" rows="5" class="form-control"></textarea><br>
    </div>
    <button type="submit" class="btn btn-info">Publish</button>
</form>

<%- include("partials/footer") -%>